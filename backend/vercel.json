{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/main.py"
    }
  ],
  "env": {
    "GOOGLE_API_KEY": "@google-api-key",
    "LLM_PROVIDER": "gemini",
    "FRONTEND_URL": "https://your-frontend.vercel.app"
  }
}
